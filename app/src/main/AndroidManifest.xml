<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.internationalstudenthelper">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="GBC ISH"
        android:roundIcon="@drawable/applogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gbcish.ui.activities.ContactUsActivity"
            android:parentActivityName="com.gbcish.ui.activities.DashboardActivity"></activity>
        <activity android:name="com.gbcish.ui.activities.PostActivity"></activity>
        <activity android:name="com.gbcish.ui.activities.ExploreActivity" />
        <activity android:name="com.gbcish.ui.activities.ManageActivity" />
        <activity
            android:name="com.gbcish.ui.activities.ProfileActivity"
            android:theme="@style/NoTheme" />
        <activity
            android:name="com.gbcish.ui.activities.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity android:name="com.gbcish.ui.activities.RegisterActivity" />
        <activity android:name="com.gbcish.ui.activities.LoginActivity" />
        <activity
            android:name="com.gbcish.ui.activities.SplashActivity"
            android:theme="@style/NoTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>